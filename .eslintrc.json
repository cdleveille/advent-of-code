// https://eslint.org/docs/user-guide/configuring/

{
  "env": {
    "es2021": true,
    "node": true,
    "commonjs": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "quotes": ["warn", "double"],
    "semi": ["warn", "always"],
    "no-unused-vars": [0, { "args": "none" }]
  }
}
